<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--  Page d'accueil  -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--  Servlets et leur mapping  -->
    <servlet>
        <servlet-name>ListAdmins</servlet-name>
        <servlet-class>com.servlets.filtreBdd.ListAdmins</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListAdmins</servlet-name>
        <url-pattern>/Liste-Admins</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListClients</servlet-name>
        <servlet-class>com.servlets.filtreBdd.ListClients</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListClients</servlet-name>
        <url-pattern>/Liste-Clients</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.servlets.logs.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Inscription</servlet-name>
        <servlet-class>com.servlets.logs.Inscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inscription</servlet-name>
        <url-pattern>/Inscription</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdatePassword</servlet-name>
        <servlet-class>com.servlets.logs.UpdatePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePassword</servlet-name>
        <url-pattern>/UpdatePassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailsAdmins</servlet-name>
        <servlet-class>com.servlets.filtreBdd.DetailsAdmins</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailsAdmins</servlet-name>
        <url-pattern>/DetailsAdmins</url-pattern>
    </servlet-mapping>
    <!-- Pages d'erreur -->
    <error-page>
        <error-code>404</error-code>
        <location>/errorPages/notFound.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/errorPages/forbidden.jsp</location>
    </error-page>

</web-app>